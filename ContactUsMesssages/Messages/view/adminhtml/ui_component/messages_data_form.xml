<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">messages_data_form.messages_data_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Data Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="ContactUsMesssages\Messages\Block\Adminhtml\Data\Edit\Buttons\Back" />
            <button name="delete" class="ContactUsMesssages\Messages\Block\Adminhtml\Data\Edit\Buttons\Delete" />
            <button name="save" class="ContactUsMesssages\Messages\Block\Adminhtml\Data\Edit\Buttons\Save" />
        </buttons>
        <namespace>messages_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>messages_data_form.messages_data_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="messages_data_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="messages/data/save"/>
        </settings>
        <dataProvider class="ContactUsMesssages\Messages\Model\DataProvider" name="messages_data_form_data_source">
            <settings>
                <requestFieldName>message_id</requestFieldName>
                <primaryFieldName>message_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="data_details">
        <settings>
            <label/>
        </settings>
        <field name="message_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>message_id</dataScope>
            </settings>
        </field>
        <field name="is_active" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Message Status</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="name" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
					 <item name="disabled" xsi:type="string">true</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
            </settings>
        </field>		
        <field name="email" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
					<item name="disabled" xsi:type="string">true</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Email</label>
                <dataScope>email</dataScope>
            </settings>
        </field>		
        <field name="phone" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
					<item name="disabled" xsi:type="string">true</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Phone Number</label>
                <dataScope>phone</dataScope>
            </settings>
        </field>
        <field name="message" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
					<item name="disabled" xsi:type="string">true</item>  
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Message</label>
                <dataScope>message</dataScope>
            </settings>
        </field>			
    </fieldset>
</form>
